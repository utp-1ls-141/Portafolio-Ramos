<!DOCTYPE HTML>
html.no-js(lang="es")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    - let url = 'http://localhost:81/public';
    title #{title}
    meta(name="description" content="Sufee Admin - HTML5 Admin Template")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="icon", href=url+"/img/favicon.ico")
    link(rel="stylesheet" href=url+"/vendor/css/normalize.css")
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css")
    link(rel="stylesheet" href=url+"/vendor/css/flag-icon.min.css")
    link(rel="stylesheet" href=url+"/vendor/scss/style.css")
    link(href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800" rel="stylesheet" type="text/css")
   
    block customcss
        link(rel="stylesheet" href=url+"/css/style.css")
    style.
      #dropi{
        position:absolute;
        left:auto !important;
        right: 0 !important;
        top:100% !important;
      }
  
  body
    aside#left-panel.left-panel
      nav.navbar.navbar-expand-sm.navbar-default
        .navbar-header
          button.navbar-toggler(type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation")
            i.fa.fa-bars
          a.navbar-brand(href="./") Los Ganchos
        #main-menu.main-menu.collapse.navbar-collapse
          ul.nav.navbar-nav
            each menu in menuNames
                if(menu.nombre==title)
                    li.active
                        a(href=menu.nombre)
                            i(class='menu-icon fa fa-'+menu.icon)
                            | #{menu.nombre}
                else
                    li
                        a(href=menu.nombre)
                            i(class='menu-icon fa fa-'+menu.icon)
                            | #{menu.nombre}
    #right-panel.right-panel
      .breadcrumbs
        .col-sm-4
          .page-header.float-left
            .page-title
              h1 #{title}
        .col-sm-8
          .page-header.float-right
            .page-title
              ol.breadcrumb.text-right
                include _login
      .content.mt-3
        block replace
    
    script(src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous")
    block customjs